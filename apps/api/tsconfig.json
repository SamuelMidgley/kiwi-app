{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "allowSyntheticDefaultImports": true,
    "types": [
      "@cloudflare/workers-types/experimental",
      "@cloudflare/vitest-pool-workers" // For `cloudflare:test` types
    ]
  }
}
